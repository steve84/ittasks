<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= Location.human_attribute_name(:street) %>:</strong></dt>
  <dd><%= @user.location.street %></dd>
  <dt><strong><%= Location.human_attribute_name(:plz).upcase %>:</strong></dt>
  <dd><%= @user.location.plz %></dd>
  <dt><strong><%= Location.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @user.location.city %></dd>
  <dt><strong><%= Location.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @user.location.country %></dd>
  <dt><strong>Map:</strong></dt>
  <dd><%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@user.location.latitude}%2C#{@user.location.longitude}" %></dd>
</dl>
