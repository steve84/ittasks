<%- model_class = Task -%>
<%= paginate @tasks %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:start) %></th>
      <th><%= model_class.human_attribute_name(:end) %></th>
      <th><%= model_class.human_attribute_name(:principal_id) %></th>
      <th><%= model_class.human_attribute_name(:agent_id) %></th>
      <th><%= model_class.human_attribute_name(:location_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th>Rating</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task_path(task) %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.start %></td>
        <td><%= task.end %></td>
        <td><%= task.principal_id %></td>
        <td><%= task.agent_id %></td>
        <td><%= task.location_id %></td>
        <td><%=l task.created_at %></td>
				<% if user_signed_in? && task.agent_id == current_user.id %>
					<td><%= rating_for task, 'overall', :enable_half => true %></td>
				<% else %>
					<td><%= rating_for task, 'overall', :enable_half => true, :disable => true %></td>
				<% end %>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      task_path(task), :class => 'btn btn-mini' %>
					<% if can? :update, task %>
	          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_task_path(task), :class => 'btn btn-mini' %>
	          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      task_path(task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
					<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>
