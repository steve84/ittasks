<%- model_class = Task -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @task.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @task.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duration) %>:</strong></dt>
  <dd><%= @task.duration %></dd>
</dl>

<dl class="dl-horizontal">
	<%= render partial: 'offers/index' %>
	<% if can?(:create, Offer) && current_user.id != @task.principal_id && @number_of_offers == 0 %>
		<%= link_to t('.new', :default => t("helpers.links.new")),
		          new_task_offer_path(@task.id),
		          :class => 'btn btn-primary' %>
	<% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tasks_path, :class => 'btn'  %>
	<% if can? :update, @task %>
  	<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_path(@task), :class => 'btn' %>
	<% end %>
	<% if can? :destroy, @task %>
  	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_path(@task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
	<% end %>
</div>
